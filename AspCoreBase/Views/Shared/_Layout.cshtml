@{
	//  _ViewStart.cshtml is what is used to render the LAYOUT page for each View that is combined with a Controller
	//  '_ViewImports' specifies the way to add things that are goping to appear in every page. This allows Views to use whatever is imported below (i.e.addTagaHelper, etc...)
	//https://stackoverflow.com/questions/4154407/asp-net-mvc-razor-pass-model-to-layout - use this for Model binding to this page if needed (TRY TO AVOID, however and use different return filters)
	var isLoggedIn = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta charset="utf-8" />

	<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
	<meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no">
	<meta name="mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="default">
	@if (User.Identity.IsAuthenticated)
	{
	<meta name="robots" content="noindex, nofollow, noimageindex">
	}
	else
	{
	<meta name="robots" content="index, follow">
	<meta name="description" content="">
	<meta name="keywords" content="KEYWORDS HERE! ">
	<meta name="author" content="Author HERE">
	<meta property="fb:page_id" content="">
	<meta property="og:title" content="">
	<meta property="og:image" content="">
	<meta property="og:description" content="CHANGE THIS og DESCRIPTION Please!">
	<meta property="og:url" content="">
	<meta property="og:site_name" content="">
	<meta property="og:type" content="website">
	<meta name="twitter:card" content="summary">
	<meta name="twitter:url" content="">
	<meta name="twitter:title" content="">
	<meta name="twitter:description" content="CHANGE THIS Twitter DESCRIPTION Please!">
	<meta name="twitter:image" content="">
	<meta name="twitter:site" content="">
	}

	<title>@ViewBag.TitleText</title>
	<link href="~/dist/css/jquery-ui.min.css" rel="stylesheet" />
	<link href="~/dist/css/jquery-ui.structure.min.css" rel="stylesheet" />
	<link href="~/dist/css/jquery-ui.theme.min.css" rel="stylesheet" />
	<link href="~/dist/css/main.min.css" rel="stylesheet" />
</head>
<body>
	<header>
		<div class="mobile-button-section">
			<div id="btn-nav-menu">
				<span></span><span></span><span></span><span></span>
			</div>
		</div>
		<nav class="primary-nav">
			<div class="container">
				<ul class="nav-right-list">
					@if (isLoggedIn)
					{
						<li><a asp-controller="Home" asp-action="Index">Home (Logged In)</a></li>
					}
					else
					{
						<li><a asp-controller="Home" asp-action="Index">Home (NOT Logged In)</a></li>
					}
				</ul>
				<ul class="nav-login">
					<li>
						@if (isLoggedIn)
						{
							<div class="profile-dropdown">
								<a asp-controller="Settings" asp-action="ProfileManagement" class="profile-dropdown-link">Profile</a><!--TODO - REPLACE with picture (optional)-->
								<div class="profile-dropdown-content">
									<a asp-controller="Settings" asp-action="Help">Help</a>
									<a asp-controller="UserManagement" asp-action="Index">User Management</a>
									<a asp-controller="Settings" asp-action="Index">Settings</a>
									<a asp-controller="Account" asp-action="Logout">Log Out</a>
								</div>
							</div>
						}
						else
						{
							<a asp-controller="Account" asp-action="Login">Login</a>
						}
					</li>
				</ul>
			</div>
		</nav>
	</header>
	<!--EVERY 'RenderBody' must contain a '<main>' element wrapping around the content as a wrapper-->
	@RenderBody()
	<footer>
		<div class="container">
			<div class="row footer-bottom">
				<div class="col-lg-12">
					<p>&copy; <time>@DateTime.Now.Year.ToString()</time> - Footer Area - No rights reserved.</p>
				</div>
			</div>
		</div>
	</footer>
	<script src="~/dist/js/jquery-3.3.1.min.js"></script>
	<script src="~/dist/js/jquery-ui.min.js"></script>
	<script src="~/dist/js/scripts.min.js"></script>
	<!--    if any View/Page creates this section (called 'scripts'), place it HERE in this area. 'false' means it is NOT required   -->
	@RenderSection("scripts", false)
</body>
</html>
