@model UserViewModel

<main id="main-create-user">
	<section>
		<div class="container">
			<h1>@ViewBag.NewUserTitleText</h1>
		</div>
	</section>
	<section>
		<div class="container">
			<h3>Enter User Information Here</h3>
			<form asp-controller="UserManagement" action="CreateUser" method="post">
				<div class="error-zone" asp-validation-summary="ModelOnly"></div>

				<label asp-for="FirstName">First Name:</label><br />
				<input asp-for="FirstName" />
				<span asp-validation-for="FirstName"></span><br />

				<label asp-for="LastName">Last Name:</label><br />
				<input asp-for="LastName" />
				<span asp-validation-for="LastName"></span><br />

				<label asp-for="Email">Email:</label><br />
				<input type="email" asp-for="Email" />
				<span asp-validation-for="Email"></span><br />

				<label asp-for="UserName">User Name:</label><br />
				<input type="text" asp-for="UserName" />
				<span asp-validation-for="UserName"></span><br />

				<label asp-for="ChosenCredentials">Password:</label><br />
				<input asp-for="ChosenCredentials" />
				<span asp-validation-for="ChosenCredentials"></span><br />

				<label asp-for="Notes">Personal Notes:</label><br />
				<textarea rows="6" asp-for="Notes"></textarea>
				<span asp-validation-for="Notes"></span><br />

				<select asp-for="TypeNumber" asp-items="@(new SelectList(ViewBag.UserTypeList, "Id", "Name"))"></select>

				<select asp-for="PropertyName" asp-items="@(new SelectList(ViewBag.PropertyList, "", "BuildingName"))"></select>

				<input type="submit" value="Create User" /><br />
				<span>@ViewBag.PostMessage</span>
			</form>

			<!--    Add an 'View More' button that creates a 'REQUEST' from the server for more 'Alerts'   -->
		</div>
	</section>
</main>
